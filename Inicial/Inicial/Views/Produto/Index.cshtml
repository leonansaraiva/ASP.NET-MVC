@{
    Layout = null;
}
@model IList<Inicial.Models.Produto>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Quantidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>
                        @Html.ActionLink(produto.Nome, "Visualiza", new { id = produto.Id })
                    </td>
                    <td>@produto.Quantidade</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
